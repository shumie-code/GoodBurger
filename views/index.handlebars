{{!-- Index.handlebars will have the template that handlebars can render onto--}}
<div class="container">

    <div class="jumbotron">
        <h1 id="color-override">Eat the Burger</h1>
        <p id="color-override">Make burgers, eat burgers</p>
        <br>
        <h2 id="color-override">Make a burger</h2>
        <panel>
            <form class="create-form">
                <div class="form-group">
                    <label for="newburger" id="color-override">New Burger:</label>
                    <input type="text" id="newburger" name="burger">

                    {{! BUTTON FOR SUBMITTING USER INPUT}}
                    <button type="submit" class="btn btn-success" id="addburger"><span class="fa fa-thumbs-up"></span></button>

                </div>
            </form>
        </panel>
    </div>


    <div class="row">
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading" id="lefthead"><bold>New Burger</bold></div>
                <div class="panel-body">
                    <ul>

                        {{#each burger}}
                        {{#unless devoured}}
                        <span><bold>{{this.id}} - {{this.burger_name}} </bold></span>
                        <button type="button" class="eatburger btn btn-warning" id="eatbutton" data-id="{{this.id}}" data-newDeveoured="{{devour}}"><span class="fa fa-trash"></span></button>
                        <hr>
                        {{/if}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>